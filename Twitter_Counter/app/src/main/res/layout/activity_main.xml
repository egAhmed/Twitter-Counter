<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="163dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="20pt"
        android:src="@drawable/tweets"
        app:srcCompat="@drawable/tweets" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8pt"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20pt"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:background="#E6F6FE"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:lineSpacingExtra="8sp"
                android:text="View Counter"
                android:textAlignment="center"
                android:textColor="#100F0F"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="sans"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:layout_marginTop="20pt"
                android:id="@+id/etext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="8sp"
                android:text="0/280"
                android:textAlignment="center"
                android:textColor="#100F0F"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="sans"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8pt"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20pt"
                android:background="#E6F6FE"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:lineSpacingExtra="8sp"
                android:text="View Counter"
                android:textAlignment="center"
                android:textColor="#100F0F"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="sans"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:layout_marginTop="20pt"
                android:id="@+id/etext2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="8sp"
                android:text="0/280"
                android:textAlignment="center"
                android:textColor="#100F0F"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="sans"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

    </LinearLayout>


    <EditText
        android:id="@+id/tShowCounterText"
        style="@android:style/Widget.EditText"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_marginVertical="10pt"
        android:layout_weight="1"
        android:background="@color/white"
        android:ems="10"
        android:gravity="center"
        android:hint="Start typing! You can enter up to 280 characters"
        android:inputType="textLongMessage|textPersonName|text"
        android:paddingTop="10pt"
        android:singleLine="false"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buCopy"
                style="@android:style/Widget.Button"
                android:layout_width="150pt"
                android:layout_height="30pt"
                android:layout_gravity="center"
                android:layout_marginVertical="10pt"
                android:layout_marginLeft="8pt"
                android:layout_marginRight="20pt"
                android:layout_weight="1"
                android:background="#00A970"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:onClick="fnCopy"
                android:text="Copy Text"
                android:textColor="#3E2723" />

            <Button
                android:id="@+id/butclere"
                style="@android:style/Widget.Button"
                android:layout_width="150pt"
                android:layout_height="30pt"
                android:layout_gravity="center"
                android:layout_marginVertical="10pt"
                android:layout_marginLeft="20pt"
                android:layout_marginRight="8pt"
                android:layout_weight="1"
                android:background="#DC0125"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:onClick="fnClear"
                android:text="Clear Text"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <Button
            android:id="@+id/buMul"
            style="@android:style/Widget.Button"
            android:layout_width="150pt"
            android:layout_height="30pt"
            android:layout_gravity="center"
            android:layout_marginVertical="10pt"
            android:background="#03A9F4"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:textColor="#4A148C"
            android:onClick="buOpEvent"
            tools:text="Post tweet" />
    </LinearLayout>



</LinearLayout>